<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSiswaActivity">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp">

            <EditText
                android:id="@+id/edtNimSiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                app:layout_constraintStart_toEndOf="@id/textNim"
                app:layout_constraintTop_toTopOf="@id/textNim"
                />

            <EditText
                android:id="@+id/edtNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                app:layout_constraintStart_toEndOf="@id/textNama"
                app:layout_constraintTop_toTopOf="@id/textNama"
                />

            <EditText
                android:id="@+id/edtalamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                app:layout_constraintStart_toEndOf="@id/textAlamat"
                app:layout_constraintTop_toTopOf="@id/textAlamat"
                />

            <EditText
                android:id="@+id/edtttl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:layout_marginStart="65dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@id/textTtl"
                app:layout_constraintTop_toTopOf="@id/textTtl"
                />

            <EditText
                android:id="@+id/edtKelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="85dp"
                app:layout_constraintStart_toEndOf="@id/textKelas"
                app:layout_constraintTop_toTopOf="@id/textKelas"
                app:layout_constraintBottom_toBottomOf="@id/textKelas"
                />

            <TextView
                android:id="@+id/textJk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin: "
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtalamat" />

            <RadioGroup
                android:id="@+id/group_jk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textJk">

                <RadioButton
                    android:id="@+id/btn_laki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laki-laki"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"/>

                <RadioButton
                    android:id="@+id/btn_perempuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"
                    android:textColor="#000000"
                    android:textSize="14sp"/>
            </RadioGroup>


            <TextView
                android:id="@+id/textAlamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat: "
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtNama" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Tambah Data Siswa"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"  />




            <TextView
                android:id="@+id/textNim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nim: "
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama: "
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtNimSiswa" />

            <TextView
                android:id="@+id/textTtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir: "
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/group_jk" />

            <TextView
                android:id="@+id/textKelas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelas: "
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtttl" />


            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/textKelas"
                app:layout_constraintStart_toStartOf="parent"
                android:onClick="handleUploadBaru"
                android:text="TAMBAH"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>