<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp">

    <EditText
        android:id="@+id/edtNamaGuru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        app:layout_constraintStart_toEndOf="@id/textNama"
        app:layout_constraintTop_toTopOf="@id/textNama"
        />

    <EditText
            android:id="@+id/edtalamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            app:layout_constraintStart_toEndOf="@id/textAlamat"
             app:layout_constraintTop_toTopOf="@id/textAlamat"
             />



        <EditText
            android:id="@+id/edttelepon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@id/textTelepon"
            app:layout_constraintTop_toTopOf="@id/textTelepon"
            />

        <EditText
            android:id="@+id/edtusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            app:layout_constraintStart_toEndOf="@id/textUsername"
            app:layout_constraintTop_toTopOf="@id/textUsername"
         />

        <EditText
            android:id="@+id/edtpassword"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            app:layout_constraintStart_toEndOf="@id/textPassword"
            app:layout_constraintTop_toTopOf="@id/textPassword"
            app:layout_constraintBottom_toBottomOf="@id/textPassword"
             />

        <TextView
            android:id="@+id/textJk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin: "
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtalamat" />

            <RadioGroup
                android:id="@+id/group_jk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textJk">

                <RadioButton
                    android:id="@+id/btn_laki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laki-laki"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"/>

                <RadioButton
                    android:id="@+id/btn_perempuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"
                    android:textColor="#000000"
                    android:textSize="14sp"/>
            </RadioGroup>


            <TextView
            android:id="@+id/textTelepon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Telp: "
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/group_jk" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="Tambah Data Guru"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"  />

            <TextView
                android:id="@+id/txt_foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto: "
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textTelepon"/>

        <TextView
            android:id="@+id/textNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama: "
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat: "
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtNamaGuru" />

        <TextView
            android:id="@+id/textUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username: "
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageButton" />

        <TextView
            android:id="@+id/textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password: "
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtusername" />


    <ImageButton
        android:id="@+id/imageButton"
        android:onClick="handlePilihGambar"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:src="@color/colorPrimary"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_foto"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/textPassword"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="handleUploadBaru"
        android:text="Upload"
         />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>