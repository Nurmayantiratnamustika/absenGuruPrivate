<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/meme"
        android:background="@drawable/bgred">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/meme"
                android:layout_toRightOf="@+id/meme"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nimSiswa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Wildan"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/namaSiswa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Gambar Meme Ke: 0"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/alamatSiswa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Gambar Meme Ke: 0"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/jkSiswa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Gambar Meme Ke: 0"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ttlSiswa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Gambar Meme Ke: 0"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/kelasSiswa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Gambar Meme Ke: 0"
                    android:textSize="14sp" />
            </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>>
    </androidx.cardview.widget.CardView>
